# =============================================================================
# Stratum AI - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=StratumAI
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-min-32-chars-long
API_V1_PREFIX=/api/v1

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL 16+)
# -----------------------------------------------------------------------------
POSTGRES_USER=stratum
POSTGRES_PASSWORD=stratum_secure_password_2024
POSTGRES_DB=stratum_ai
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://stratum:stratum_secure_password_2024@db:5432/stratum_ai
DATABASE_URL_SYNC=postgresql://stratum:stratum_secure_password_2024@db:5432/stratum_ai

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# -----------------------------------------------------------------------------
# ML Provider Configuration (Module A: Intelligence Engine)
# -----------------------------------------------------------------------------
# Options: 'local' (uses scikit-learn models) or 'vertex' (Google Vertex AI)
ML_PROVIDER=local
ML_MODELS_PATH=/app/ml_service/models

# Google Vertex AI (only required if ML_PROVIDER=vertex)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
VERTEX_AI_ENDPOINT=projects/{project}/locations/{location}/endpoints/{endpoint_id}
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gcp-service-account.json

# -----------------------------------------------------------------------------
# Ad Platform API Keys (Mock mode by default)
# -----------------------------------------------------------------------------
# Set USE_MOCK_AD_DATA=true for development without real API keys
USE_MOCK_AD_DATA=true

# Meta/Facebook Ads
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=

# Google Ads
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# TikTok Ads
TIKTOK_APP_ID=
TIKTOK_SECRET=
TIKTOK_ACCESS_TOKEN=

# Snapchat Ads
SNAPCHAT_CLIENT_ID=
SNAPCHAT_CLIENT_SECRET=
SNAPCHAT_ACCESS_TOKEN=

# -----------------------------------------------------------------------------
# Market Intelligence (Module D)
# -----------------------------------------------------------------------------
# Options: 'mock', 'serpapi', 'dataforseo'
MARKET_INTEL_PROVIDER=mock

# SerpApi (optional)
SERPAPI_KEY=

# DataForSEO (optional)
DATAFORSEO_LOGIN=
DATAFORSEO_PASSWORD=

# -----------------------------------------------------------------------------
# Security & Encryption
# -----------------------------------------------------------------------------
# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Key for PII (32-byte base64-encoded)
PII_ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_DEFAULT_LOCALE=en

# -----------------------------------------------------------------------------
# Observability & Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_COMPETITOR_INTEL=true
FEATURE_WHAT_IF_SIMULATOR=true
FEATURE_AUTOMATION_RULES=true
FEATURE_GDPR_COMPLIANCE=true
