# =============================================================================
# Stratum AI - PRODUCTION Environment Configuration
# =============================================================================
# Use this template for production deployments
# ALL secrets must be generated fresh and stored securely (e.g., AWS Secrets Manager, Vault)

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=StratumAI
APP_ENV=production
DEBUG=false
# REQUIRED: Generate a unique 64-character secret
SECRET_KEY=
API_V1_PREFIX=/api/v1

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL 16+)
# -----------------------------------------------------------------------------
POSTGRES_USER=stratum_prod
# REQUIRED: Generate a strong password (min 32 chars)
POSTGRES_PASSWORD=
POSTGRES_DB=stratum_ai_prod
# Use your production database host
POSTGRES_HOST=your-rds-endpoint.amazonaws.com
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
DATABASE_URL_SYNC=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Use your production Redis host (e.g., ElastiCache)
REDIS_HOST=your-redis-endpoint.amazonaws.com
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/2

# -----------------------------------------------------------------------------
# ML Provider Configuration
# -----------------------------------------------------------------------------
ML_PROVIDER=local
ML_MODELS_PATH=/app/ml_service/models

# Google Vertex AI (if using)
GOOGLE_CLOUD_PROJECT=
VERTEX_AI_ENDPOINT=
GOOGLE_APPLICATION_CREDENTIALS=

# -----------------------------------------------------------------------------
# Ad Platform API Keys
# -----------------------------------------------------------------------------
USE_MOCK_AD_DATA=false

# Meta/Facebook Ads - REQUIRED for production
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=

# Google Ads - REQUIRED for production
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# TikTok Ads
TIKTOK_APP_ID=
TIKTOK_SECRET=
TIKTOK_ACCESS_TOKEN=

# Snapchat Ads
SNAPCHAT_CLIENT_ID=
SNAPCHAT_CLIENT_SECRET=
SNAPCHAT_ACCESS_TOKEN=

# -----------------------------------------------------------------------------
# Market Intelligence
# -----------------------------------------------------------------------------
MARKET_INTEL_PROVIDER=serpapi
SERPAPI_KEY=
DATAFORSEO_LOGIN=
DATAFORSEO_PASSWORD=

# -----------------------------------------------------------------------------
# Security & Encryption - ALL REQUIRED
# -----------------------------------------------------------------------------
# REQUIRED: Generate unique JWT secret
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# REQUIRED: Generate 32-byte base64 key
PII_ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Replace with your actual production domain(s)
CORS_ORIGINS=https://app.yourdomain.com,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com
VITE_DEFAULT_LOCALE=en

# -----------------------------------------------------------------------------
# Observability & Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=WARNING
LOG_FORMAT=json
# REQUIRED: Add Sentry DSN for error tracking
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# -----------------------------------------------------------------------------
# Email Configuration (SMTP) - REQUIRED for production
# -----------------------------------------------------------------------------
# Use a transactional email service (SendGrid, AWS SES, Mailgun, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_TLS=true
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Stratum AI
FRONTEND_URL=https://app.yourdomain.com

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_COMPETITOR_INTEL=true
FEATURE_WHAT_IF_SIMULATOR=true
FEATURE_AUTOMATION_RULES=true
FEATURE_GDPR_COMPLIANCE=true
