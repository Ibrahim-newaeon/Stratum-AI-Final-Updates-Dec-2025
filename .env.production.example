# =============================================================================
# Stratum AI - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=production
APP_NAME=Stratum AI Beta
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Security Keys (GENERATE UNIQUE VALUES!)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# -----------------------------------------------------------------------------
SECRET_KEY=CHANGE_ME_generate_32_char_secret
JWT_SECRET_KEY=CHANGE_ME_generate_32_char_jwt_secret
PII_ENCRYPTION_KEY=CHANGE_ME_generate_32_char_encryption_key

# -----------------------------------------------------------------------------
# Database (DigitalOcean Managed PostgreSQL)
# Get connection details from DigitalOcean Database dashboard
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://doadmin:PASSWORD@db-host-xxx.ondigitalocean.com:25060/stratum_ai?sslmode=require
DATABASE_URL_SYNC=postgresql://doadmin:PASSWORD@db-host-xxx.ondigitalocean.com:25060/stratum_ai?sslmode=require

# -----------------------------------------------------------------------------
# Redis (Local on Droplet - configured via Docker Compose)
# These are overridden in docker-compose.beta.yml but kept for reference
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# -----------------------------------------------------------------------------
# CORS & URLs
# -----------------------------------------------------------------------------
CORS_ORIGINS=https://beta.stratum-ai.com
FRONTEND_URL=https://beta.stratum-ai.com
API_URL=https://beta.stratum-ai.com/api
VITE_API_BASE_URL=https://beta.stratum-ai.com

# -----------------------------------------------------------------------------
# Email (SendGrid recommended for beta)
# Get API key from: https://app.sendgrid.com/settings/api_keys
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=CHANGE_ME_sendgrid_api_key
EMAIL_FROM_ADDRESS=noreply@stratum-ai.com
EMAIL_FROM_NAME=Stratum AI

# -----------------------------------------------------------------------------
# ML & Data Settings
# -----------------------------------------------------------------------------
ML_PROVIDER=local
ML_MODELS_PATH=/app/ml_service/models
USE_MOCK_AD_DATA=false
MARKET_INTEL_PROVIDER=mock

# -----------------------------------------------------------------------------
# Feature Flags (Beta Features)
# -----------------------------------------------------------------------------
SUBSCRIPTION_TIER=professional
FEATURE_FLAG_COMPETITOR_INTEL=true
FEATURE_FLAG_WHATIF_SIMULATOR=true
FEATURE_FLAG_AUTOMATION_RULES=true
FEATURE_FLAG_CDP_AUDIENCE_SYNC=true

# -----------------------------------------------------------------------------
# Slack Notifications (Optional)
# Create webhook at: https://api.slack.com/messaging/webhooks
# -----------------------------------------------------------------------------
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#stratum-alerts

# -----------------------------------------------------------------------------
# Sentry Error Tracking (Optional but Recommended)
# Create project at: https://sentry.io
# -----------------------------------------------------------------------------
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Ad Platform OAuth (Configure when needed)
# -----------------------------------------------------------------------------
# Google Ads
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_DEVELOPER_TOKEN=

# Meta/Facebook
META_APP_ID=
META_APP_SECRET=

# TikTok
TIKTOK_APP_ID=
TIKTOK_APP_SECRET=

# Snapchat
SNAPCHAT_CLIENT_ID=
SNAPCHAT_CLIENT_SECRET=
